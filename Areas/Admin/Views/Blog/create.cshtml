@model BlogAddModel

<form method="post" asp_action="Create" class="p-3" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title">

    </div>
    <div class="form-group">

        <label asp-for="ShortDescription"></label>
        <textarea asp-for="ShortDescription" class="form-control"></textarea>

    </div>
    <div class="form-group">

        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>

    </div>
    <div class="form-group">

        <label asp-for="Image"></label>
        <input class="form-control" type="file" asp-for="Image">

    </div>
    <div>
        <button type="submit" class="btn btn-block btn-info">Kaydet</button>
    </div>
</form>